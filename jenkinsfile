pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/kishore2436/Maven_job.git'
            }
        }

        stage('Compile') {
            steps {
                echo 'Compiling project...'
                sh 'mvn clean compile'
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging project...'
                sh 'mvn package'

                // Copy target folder to workspace (optional)
                sh '''
                echo "Copying target folder to workspace..."
                cp -r target $WORKSPACE/
                ls -la $WORKSPACE/target
                '''
            }
        }
    }

    post {
        success {
            echo '✅ Build and Package completed successfully.'
            echo "Target directory is located at: $WORKSPACE/target"
        }
        failure {
            echo '❌ Build failed.'
        }
    }
}


