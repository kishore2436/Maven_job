pipeline {
    agent any

    tools {
        // Use the exact Maven name configured in Jenkins (example: "Maven 3.9.11")
        maven 'Maven 3.9.11'
    }

    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                git 'https://github.com/kishore2436/Maven_job.git'
            }
        }

        stage('Compile') {
            steps {
                echo 'ğŸ§± Compiling project...'
                sh 'mvn -B clean compile'
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ—ï¸ Building project...'
                sh 'mvn -B clean install'
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Running tests...'
                sh 'mvn -B test'
            }
        }

        stage('Package') {
            steps {
                echo 'ğŸ“¦ Packaging project...'
                sh 'mvn -B package'
            }
        }
    }

    post {
        success {
            echo 'âœ… Build and Package completed successfully!'
            echo "ğŸ¯ Target directory: $WORKSPACE/target"
            // Save the generated .jar and related files
            archiveArtifacts artifacts: 'target/**', fingerprint: true
        }
        failure {
            echo 'âŒ Build failed. Check logs for errors.'
        }
    }
}
