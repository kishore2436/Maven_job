pipeline {
    agent any

    tools {
        // Use the exact Maven name configured in Jenkins (example: "Maven 3.9.11")
        maven 'Maven 3.9.11'
    }

    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                git 'https://github.com/kishore2436/Maven_job.git'
            }
        }

        stage('Compile') {
            steps {
                echo '🧱 Compiling project...'
                sh 'mvn -B clean compile'
            }
        }

        stage('Build') {
            steps {
                echo '🏗️ Building project...'
                sh 'mvn -B clean install'
            }
        }

        stage('Test') {
            steps {
                echo '🧪 Running tests...'
                sh 'mvn -B test'
            }
        }

        stage('Package') {
            steps {
                echo '📦 Packaging project...'
                sh 'mvn -B package'
            }
        }
    }

    post {
        success {
            echo '✅ Build and Package completed successfully!'
            echo "🎯 Target directory: $WORKSPACE/target"
            // Save the generated .jar and related files
            archiveArtifacts artifacts: 'target/**', fingerprint: true
        }
        failure {
            echo '❌ Build failed. Check logs for errors.'
        }
    }
}
