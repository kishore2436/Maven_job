pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url:https://github.com/kishore2436/Maven_job.git'i
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }

    post {
        success {
            echo '✅ Build and Package completed successfully!'
        }
        failure {
            echo '❌ Build failed!'
        }
    }
}

